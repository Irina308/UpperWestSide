<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/c_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            android:textSize="19sp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/colorLightFont" />

    </android.support.design.widget.AppBarLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="13dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">


                <ImageButton
                    android:id="@+id/boernerBarBtn"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="17dp"
                    android:background="@android:color/transparent"
                    android:onClick="openBoernerBarAct"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/boerner_bar" />

                <TextView
                    android:id="@+id/boernerBarTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BÃ¶rner Bar"
                    android:textAlignment="center"
                    android:textColor="@color/colorLightFont"
                    android:textSize="10pt"
                    android:textStyle="bold" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0px"

                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/hsUlmBtn"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="17dp"
                    android:background="@android:color/transparent"
                    android:onClick="openLocationsAct"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/hochschule_ulm" />

                <TextView
                    android:id="@+id/hochschuleUlmTxt"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:text="Standorte der Hochschule"
                    android:textAlignment="center"
                    android:textColor="@color/colorLightFont"

                    android:textSize="10pt"

                    android:textStyle="bold" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0px"

                android:layout_weight="1">


                <ImageButton
                    android:id="@+id/fleaMarketBtn"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="17dp"
                    android:background="@android:color/transparent"
                    android:onClick="openFleaMarketAct"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/flea_market" />

                <TextView
                    android:id="@+id/fleaMarketTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flea Market"
                    android:textAlignment="center"
                    android:textColor="@color/colorLightFont"

                    android:textSize="10pt"


                    android:textStyle="bold" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0px"

                android:layout_weight="1">


                <ImageButton
                    android:id="@+id/randomQuoteBtn"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="17dp"
                    android:background="@android:color/transparent"
                    android:onClick="openRandomQuoteAct"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/quotes" />

                <TextView
                    android:id="@+id/randomQuoteTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Random Quote"
                    android:textAlignment="center"
                    android:textColor="@color/colorLightFont"

                    android:textSize="10pt"

                    android:textStyle="bold" />

            </FrameLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
